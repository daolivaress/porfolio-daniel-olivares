---
import Image from "astro/components/Image.astro";
import pfp from "../assets/pfp.jpeg";
---

<header class="mb-5">
  <nav
    class="flex justify-between items-center py-12 max-md:flex-col max-sm:px-8 max-lg:px-18 lg:w-[800px]"
  >
    <div class="flex items-center gap-2">
      <Image
        src={pfp}
        alt="Logo"
        class="rounded-xl size-12 object-cover"
      />
      <p id="name" class="text-sm font-semibold">daolivares.dev</p><span
        class="cursor-pointer text-sm text-[#95999d] transition-all hover:text-blue-600"
        >~ daniel</span
      >
    </div>
    <ul class="flex gap-3 text-sm max-md:mt-4 max-md:text-xs">
      <li class="transition-all hover:text-blue-600">
      <a href="/">Home</a>
      </li>
      <li class="transition-all hover:text-blue-600">
      <a href="/#projects">Projects</a>
      </li>
      <li class="transition-all hover:text-blue-600">
      <a href="/#trayectory">Trayectory</a>
      </li>
      <li class="transition-all hover:text-blue-600">
      <a href="contact">Contact</a>
      </li>
    </ul>
  </nav>
</header>

<style>
  #name {
    font-family: "M PLUS 1 Code Variable", monospace;
  }
</style>
